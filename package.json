{
  "name": "action-slack-deploy-pipeline",
  "version": "0.1.0",
  "private": true,
  "description": "Post GitHub Action deploy workflow progress notifications to Slack",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --watch",
    "test:ci": "jest",
    "all": "npm run build && npm run format:check && npm run lint && npm run package && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fieldguide/action-slack-deploy-pipeline.git"
  },
  "keywords": [
    "actions",
    "slack",
    "deployment",
    "pipeline",
    "workflow",
    "notifications",
    "progress"
  ],
  "author": "Nick Amoscato <nick@amoscato.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.0.3",
    "@octokit/webhooks-types": "^6.3.6",
    "@slack/web-api": "^6.7.2",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "@types/node": "^16.11.56",
    "@typescript-eslint/parser": "^5.36.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.0",
    "eslint-plugin-github": "^4.3.7",
    "eslint-plugin-jest": "^27.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.8.2"
  }
}
