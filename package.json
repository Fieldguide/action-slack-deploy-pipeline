{
  "name": "action-slack-deploy-pipeline",
  "version": "0.1.0",
  "private": true,
  "description": "Post GitHub Action deploy workflow progress notifications to Slack",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build --source-map --license licenses.txt",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "jest --watch",
    "test:ci": "jest",
    "all": "npm run build && npm run format:check && npm run lint && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fieldguide/action-slack-deploy-pipeline.git"
  },
  "keywords": [
    "actions",
    "slack",
    "deployment",
    "pipeline",
    "workflow",
    "notifications",
    "progress"
  ],
  "author": "Nick Amoscato <nick@amoscato.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-types": "^6.11.0",
    "@slack/web-api": "^6.8.1",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "@types/node": "^16.18.23",
    "@typescript-eslint/parser": "^5.57.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^28.1.3",
    "prettier": "^2.8.7",
    "ts-jest": "^28.0.8",
    "typescript": "^5.0.4"
  }
}
